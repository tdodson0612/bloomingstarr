// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// ----------------------------
// ENUMS
// ----------------------------
enum Role {
  OWNER
  MANAGER
  EMPLOYEE
}

// ----------------------------
// MODELS
// ----------------------------

model Business {
  id             String           @id @default(cuid())
  name           String
  logoUrl        String?
  theme          String?
  users          User[]
  plantIntakes   PlantIntake[]
  productIntakes ProductIntake[]  // <-- ADD THIS LINE
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  transplantLogs TransplantLog[]
  treatmentTrackings TreatmentTracking[]
}

model User {
  id          String     @id @default(cuid())
  email       String     @unique
  name        String?
  role        Role       @default(EMPLOYEE)

  businessId  String
  business    Business   @relation(fields: [businessId], references: [id])

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model PlantIntake {
  id            String     @id @default(cuid())

  businessId    String
  business      Business   @relation(fields: [businessId], references: [id])

  sku           String?
  genus         String?
  cultivar      String?
  size          String?
  quantity      Int?
  vendor        String?

  dateReceived  DateTime?  @db.Timestamp(6)

  notes         String?

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([businessId])
  @@index([sku])
  @@index([dateReceived])
}

model ProductIntake {
  id            String     @id @default(cuid())
  businessId    String
  business      Business   @relation(fields: [businessId], references: [id])
  
  productName   String?
  category      String?
  brand         String?
  sku           String?
  quantity      Int?
  unit          String?
  unitCost      Float?
  totalCost     Float?
  vendor        String?
  dateReceived  DateTime?  @db.Timestamp(6)
  notes         String?
  
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  
  @@index([businessId])
  @@index([category])
  @@index([dateReceived])
}

model TransplantLog {
  id              String     @id @default(cuid())
  businessId      String
  business        Business   @relation(fields: [businessId], references: [id])
  
  transplantDate  DateTime?  @db.Timestamp(6)
  plantName       String?
  genus           String?
  cultivar        String?
  fromSize        String?
  toSize          String?
  quantity        Int?
  location        String?
  employee        String?
  notes           String?
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  @@index([businessId])
  @@index([transplantDate])
  @@index([plantName])
}

model TreatmentTracking {
  id              String     @id @default(cuid())
  businessId      String
  business        Business   @relation(fields: [businessId], references: [id])
  
  treatmentDate   DateTime?  @db.Timestamp(6)
  plantName       String?
  genus           String?
  cultivar        String?
  treatmentType   String?
  product         String?
  dosage          String?
  quantity        Int?
  location        String?
  reason          String?
  employee        String?
  notes           String?
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  @@index([businessId])
  @@index([treatmentDate])
  @@index([treatmentType])
}