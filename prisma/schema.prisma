// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// ----------------------------
// ENUMS
// ----------------------------
enum Role {
  OWNER
  MANAGER
  EMPLOYEE
}

// ----------------------------
// MODELS
// ----------------------------

model Business {
  id             String           @id @default(cuid())
  name           String
  logoUrl        String?
  theme          String?
  users          User[]
  plantIntakes   PlantIntake[]
  productIntakes ProductIntake[]  
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  transplantLogs TransplantLog[]
  treatmentTrackings TreatmentTracking[]
  fertilizerLogs FertilizerLog[]
  overheadExpenses OverheadExpenses[]
  sales          Sales[]
  pricings       Pricing[]

}

model User {
  id          String     @id @default(cuid())
  email       String     @unique
  name        String?
  employeeId  String?    @unique  // ADD THIS
  password    String?                // ADD THIS (will be hashed)
  role        Role       @default(EMPLOYEE)
  businessId  String
  business    Business   @relation(fields: [businessId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model PlantIntake {
  id            String     @id @default(cuid())

  businessId    String
  business      Business   @relation(fields: [businessId], references: [id])

  sku           String?
  genus         String?
  cultivar      String?
  size          String?
  quantity      Int?
  vendor        String?

  dateReceived  DateTime?  @db.Timestamp(6)

  notes         String?

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([businessId])
  @@index([sku])
  @@index([dateReceived])
}

model ProductIntake {
  id            String     @id @default(cuid())
  businessId    String
  business      Business   @relation(fields: [businessId], references: [id])
  
  productName   String?
  category      String?
  brand         String?
  sku           String?
  quantity      Int?
  unit          String?
  unitCost      Float?
  totalCost     Float?
  vendor        String?
  dateReceived  DateTime?  @db.Timestamp(6)
  notes         String?
  
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  
  @@index([businessId])
  @@index([category])
  @@index([dateReceived])
}

model TransplantLog {
  id              String     @id @default(cuid())
  businessId      String
  business        Business   @relation(fields: [businessId], references: [id])
  
  transplantDate  DateTime?  @db.Timestamp(6)
  plantName       String?
  genus           String?
  cultivar        String?
  fromSize        String?
  toSize          String?
  quantity        Int?
  location        String?
  employee        String?
  notes           String?
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  @@index([businessId])
  @@index([transplantDate])
  @@index([plantName])
}

model TreatmentTracking {
  id              String     @id @default(cuid())
  businessId      String
  business        Business   @relation(fields: [businessId], references: [id])
  
  treatmentDate   DateTime?  @db.Timestamp(6)
  plantName       String?
  genus           String?
  cultivar        String?
  treatmentType   String?
  product         String?
  dosage          String?
  quantity        Int?
  location        String?
  reason          String?
  employee        String?
  notes           String?
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  @@index([businessId])
  @@index([treatmentDate])
  @@index([treatmentType])
}

model FertilizerLog {
  id                String     @id @default(cuid())
  businessId        String
  business          Business   @relation(fields: [businessId], references: [id])
  
  applicationDate   DateTime?  @db.Timestamp(6)
  plantName         String?
  genus             String?
  cultivar          String?
  fertilizerType    String?
  brand             String?
  npkRatio          String?
  applicationRate   String?
  quantity          Int?
  location          String?
  employee          String?
  notes             String?
  
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  
  @@index([businessId])
  @@index([applicationDate])
  @@index([fertilizerType])
}

model OverheadExpenses {
  id              String     @id @default(cuid())
  businessId      String
  business        Business   @relation(fields: [businessId], references: [id])
  
  expenseDate     DateTime?  @db.Timestamp(6)
  category        String?
  description     String?
  vendor          String?
  amount          Float?
  paymentMethod   String?
  invoiceNumber   String?
  employee        String?
  notes           String?
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  @@index([businessId])
  @@index([expenseDate])
  @@index([category])
}

model Sales {
  id              String     @id @default(cuid())
  businessId      String
  business        Business   @relation(fields: [businessId], references: [id])
  
  saleDate        DateTime?  @db.Timestamp(6)
  customerName    String?
  plantName       String?
  genus           String?
  cultivar        String?
  size            String?
  quantity        Int?
  unitPrice       Float?
  totalPrice      Float?
  paymentMethod   String?
  employee        String?
  notes           String?
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  @@index([businessId])
  @@index([saleDate])
  @@index([customerName])
}

model Pricing {
  id              String     @id @default(cuid())
  businessId      String
  business        Business   @relation(fields: [businessId], references: [id])
  
  plantName       String?
  genus           String?
  cultivar        String?
  size            String?
  basePrice       Float?
  markup          Float?
  finalPrice      Float?
  category        String?
  notes           String?
  
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  @@index([businessId])
  @@index([plantName])
  @@index([category])
}